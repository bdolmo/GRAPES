FROM ubuntu:14.04

MAINTAINER Bernat del Olmo bdelolmo@gencardio.com

# install required packages
RUN apt-get update && apt-get install -y \
    build-essential \
    g++ \
    gfortran \
    git \
    make \
    zlib1g-dev \
    libncurses5-dev \
    libncursesw5-dev \
    libboost-program-options-dev \
    libboost-system-dev \
    libboost-filesystem-dev \
    libbz2-dev \
    liblzma-dev \
    python3-pip \
    python-pip \
    cpanminus \
    r-base r-base-core r-recommended \
    samtools 
    #bedtools

RUN apt-get -y install wget

RUN apt-get -y install python3.5

RUN apt-get -y install python-numpy
 
RUN cpanm Parallel::ForkManager \
    Statistics::Descriptive \
    Sort::Key::Natural \

#RUN pip install --upgrade pip
#RUN pip install numpy
RUN apt-get -y install macs
#RUN pip install MACS2

RUN cd /opt \
    && git clone https://github.com/arq5x/bedtools2.git \
    && cd bedtools2/ \
    && make \
    && make install

#install GRAPES
RUN cd /opt \
    && git clone https://github.com/bdolmo/GRAPES.git \
    && cd /opt/GRAPES/ \
    && perl INSTALL.PL

# Workdir
WORKDIR /root/

# Add GRAPES to PATH
ENV PATH="/opt/GRAPES:${PATH}"

# by default /bin/sh is executed
CMD ["/bin/sh"]
